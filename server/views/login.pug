extends base

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log in

        // register form
        form(method='POST' action='/login')
          input(type="hidden", name="_csrf", value="#{csrf_token}")
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='enter your email' name='email' value='test@test.com')
            label(for='pw') Password:
            input#password.form-control(type='password' name='password' value='test')
          button.btn.btn-primary(type='submit') Sign up

        div
          p Don't have a account&nbsp;
            a(href='/signup') signup